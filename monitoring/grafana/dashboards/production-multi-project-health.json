          "show": false,
          "reducer": "sum",
          "countRows": false
        }
      },
      "pluginVersion": "9.0.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "up",
          "refId": "A",
          "legendFormat": "{{job}} - {{instance}}"
        }
      ],
      "title": "Service Status & Controls",
